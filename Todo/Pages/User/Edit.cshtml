@page "/User/Edit"
@model Todo.Pages.User.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserTask.Id" />
            <div class="form-group">
                <label asp-for="UserTask.TaskTitle" class="control-label"></label>
                <input asp-for="UserTask.TaskTitle" class="form-control" />
                <span asp-validation-for="UserTask.TaskTitle" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="UserTask.TaskDescription" class="control-label"></label>
                <input asp-for="UserTask.TaskDescription" class="form-control" />
                <span asp-validation-for="UserTask.TaskDescription" class="text-danger"></span>
            </div>
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UserTask.TaskStatus" /> @Html.DisplayNameFor(model => model.UserTask.TaskStatus)
                </label>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
