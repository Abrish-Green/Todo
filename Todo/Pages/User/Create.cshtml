@page  "/User/Create"
@model Todo.Pages.User.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserTask.TaskTitle" class="control-label"></label>
                <input asp-for="UserTask.TaskTitle" class="form-control" required/>
                <span asp-validation-for="UserTask.TaskTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserTask.TaskDescription" class="control-label"></label>
                <input asp-for="UserTask.TaskDescription" class="form-control" required/>
                <span asp-validation-for="UserTask.TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
